{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsNgxFormlyShell",
  "title": "@ngx-formly Shell Options Schema",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    },
    "skipPackageJson": {
      "type": "boolean",
      "default": false,
      "description": "Do not add @ngx-formly dependencies to package.json (e.g., --skipPackageJson)"
    },
    "module": {
      "type": "string",
      "default": "app",
      "description": "Allows specification of the declaring module.",
      "alias": "m"
    },
    "uiTheme": {
      "enum": ["material", "bootstrap", "ionic", "nativescript", "primeng", "kendo", "ng-zorro-antd"],
      "description": "The UI with pre-defined types/templates"
    }
  },
  "required": []
}
