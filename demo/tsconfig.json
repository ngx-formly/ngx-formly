{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "./src",
    "paths": {
      "@ngx-formly/core": ["../../src/core/index"],
      "@ngx-formly/bootstrap": ["../../src/ui-bootstrap/index"],
      "@ngx-formly/material": ["../../src/ui-material/index"]
    }
  }
}
