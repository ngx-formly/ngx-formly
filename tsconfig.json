{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "declaration": true,
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "baseUrl": "src",
    "lib": ["dom", "es6"],
    "importHelpers": true,
    "paths": {
      "@ngx-formly/core": ["./core/index"],
      "@ngx-formly/bootstrap": ["./ui-bootstrap/index"],
      "@ngx-formly/material": ["./ui-material/index"]
    },
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "demo/**/*.ts"
  ],
  "compileOnSave": false
}
