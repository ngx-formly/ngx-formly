{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "@ngx-formly/*": ["src/*/src/private_api", "src/*/src/public_api", "src/ui/*/src/public_api"],
      "@assets/*": ["demo/src/assets/*"]
    }
  },
  "exclude": [
    "demo/src/assets/stackblitz/**/*.ts",
    "demo/src/assets/stackblitz/**/*.ts",
    "src/schematics/src/*/files/**/*",
    "index.ts",
    "dist/**/*",
    "cypress/**/*",
    "node_modules/**/*"
  ]
}
